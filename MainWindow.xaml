<Window x:Class="Lacia_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lacia_GUI"
        mc:Ignorable="d"
        Title="Lacia" Height="680" Width="1366" MaxHeight="680" MaxWidth="1366" MinHeight="680" MinWidth="1366" Visibility="Visible">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Lacia_Logo.jpg" Stretch="Uniform"/>
    </Window.Background>




    <StackPanel Name="AI" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
        <TextBox x:Name="Input" Width="400px" Height="30px" FontSize="20" Background="AliceBlue" Opacity="50" TextChanged="Input_TextChanged" HorizontalAlignment="Stretch" Margin="0,10,790,10" />
        <Button x:Name="Start" Click="Start_Click" ClickMode="Release" Content="Start" Width="150px" Height="40px" Background="DimGray" Foreground="AliceBlue" FontFamily="Haettenschweiler" FontSize="36" FontStyle="Normal" RenderTransformOrigin="-0.377,0.688" Margin="0,0,10,10">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </StackPanel>
</Window>
