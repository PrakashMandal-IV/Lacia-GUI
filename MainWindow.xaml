<Window x:Class="Lacia_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lacia_GUI"
        mc:Ignorable="d"
        Title="Lacia" Height="450" Width="800" Background="Black" Visibility="Visible">


    <StackPanel Name="AI">

        <Label x:Name="Logo" Width="200" Content="Lacia" Height="60px" FontSize="30" Foreground="White"  Opacity="50" FontFamily="Haettenschweiler" HorizontalContentAlignment="Center"/>
        
        <TextBox x:Name="Input" Width="400px" Height="30px" FontSize="20" Background="AliceBlue" Opacity="50" TextChanged="Input_TextChanged"  />
        <Button Name="Start" Click="Start_Click" ClickMode="Release" Content="Start" Width="150px" Height="40px" Margin="3px" Background="DimGray" Foreground="AliceBlue" FontFamily="Haettenschweiler" FontSize="36" FontStyle="Normal">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </StackPanel>
</Window>
